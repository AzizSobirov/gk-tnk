---
import App from "../layouts/App.astro";
import { H1, H2, H3, Button, Section, Image, Icon } from "@ui";
import { TheFaq } from "@components";
---

<App title="Контакты">
  <main>
    <!-- contacts -->
    <Section name="contacts">
      <div class="breadcrumb">
        <a href="/">Главная</a>
        <div class="line"></div>
        <span>контакты</span>
      </div>
      <H2><span>контакты</span></H2>
      <div class="contacts__wrapper">
        <div class="contacts__text">
          <ul class="contacts__text-list">
            <li>
              <span>Наш адрес</span>
              <p>г.Москва, ул. Пушкина, д. 1</p>
            </li>
            <li>
              <span>Мессенджеры</span>
              <a href="#" title="Telegram">Telegram</a>
              <a href="#" title="WhatsApp">WhatsApp</a>
            </li>
            <li>
              <span>Телефоны</span>
              <a href="tel:+79999999999">+7 (999) 999-99-99</a>
              <a href="tel:+79999999999">+7 (999) 999-99-99</a>
            </li>
            <li>
              <span>Почта</span>
              <a href="mailto:info@site.ru">info@site.ru</a>
            </li>
            <li>
              <span>Соцсети</span>
              <div class="socials">
                <a href="#"><Icon src="vk.svg" /></a>
                <a href="#"><Icon src="pinterest.svg" /></a>
                <a href="#"><Icon src="telegram.svg" /></a>
                <a href="#"><Icon src="r.svg" /></a>
                <a href="#"><Icon src="dzen.svg" /></a>
              </div>
            </li>
          </ul>

          <div class="contacts__text-actions">
            <div
              class="btn variant-outline"
              role="button"
              tabindex="0"
              aria-label="Написать нам"
              data-modal="form"
            >
              Написать нам
            </div>
            <a href="#" class="btn variant-outline">Позвонить нам</a>
          </div>
        </div>
        <div class="contacts__map">
          <iframe
            src="https://yandex.uz/map-widget/v1/?ll=37.617700%2C55.755863&z=10"
            width="560"
            height="400"
            allowfullscreen="true"
            style="position:relative;"></iframe>
        </div>
      </div>
    </Section>
  </main>
</App>
