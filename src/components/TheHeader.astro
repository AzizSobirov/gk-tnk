---
import { H2, Image, WpNav } from "@ui";
import type { Nav } from "@types";

const list: Nav[] = [
  {
    name: "Главная",
    href: "/",
  },
  {
    name: "О нас",
    href: "/about",
  },
  {
    name: "Услуги",
    href: "/services",
  },
  {
    name: "Портфолио",
    href: "/portfolio",
  },
