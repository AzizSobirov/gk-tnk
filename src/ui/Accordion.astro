---
interface Props {
  title: string;
  icon?: string;
}

const { title } = Astro.props;
---

<div class="accordion">
  <div class="accordion__header">
    <div class="accordion__header-title">{title}</div>
    <div class="accordion__header-icon">
      <svg
        width="20"
        height="20"
        viewBox="0 0 20 20"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M10 1V19M19 10H1"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </div>
  </div>
  <div class="accordion__body">
    <div class="accordion__content">
      <slot />
    </div>
    <slot name="footer" />
  </div>
</div>
